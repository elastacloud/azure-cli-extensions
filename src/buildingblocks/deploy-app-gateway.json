                                    "defaultBackendAddressPoolName": "appGatewayBackendPool",
                                    "defaultBackendHttpSettingsName": "appGatewayBackendHttpSettings",
                                    "pathRules": [
                                        {
                                            "name": "p1",
                                            "paths": [
