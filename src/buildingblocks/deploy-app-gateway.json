                                    "cookieBasedAffinity": "Enabled",
                                    "pickHostNameFromBackendAddress": false,
                                    "probeEnabled": true,
                                    "requestTimeout": 20,
                                    "probeName": "p1"
                                }
                            ],
                            "httpListeners": [
                                {
                                    "name": "appGatewayHttpListener",
