                                    "frontendPortName": "list1-http1",
                                    "protocol": "Http",
                                    "requireServerNameIndication": false
                                },
                                {
                                    "name": "list2",
                                    "frontendIPConfigurationName": "testfec",
                                    "frontendPortName": "list-http2",
                                    "protocol": "Http",
                                    "requireServerNameIndication": false
                                }
                            ],
                            "urlPathMaps": [
                                {
