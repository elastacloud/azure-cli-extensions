                                    "port": 80,
                                    "protocol": "Http",
                                    "cookieBasedAffinity": "Disabled",
                                    "pickHostNameFromBackendAddress": false,
                                    "probeEnabled": true,
                                    "requestTimeout": 30
                                },
                                {
                                    "name": "test-settings",
